#: import environ os.environ
#: import gch kivy.utils.get_color_from_hex

#: import StiffScrollEffect kivymd.stiffscroll.StiffScrollEffect



<ScanScreen>:
# Screen

    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Scan QR / Barcode"
            type: "bottom"
            specific_text_color: gch("#060606")
            left_action_items: [["keyboard-backspace", lambda x: root.back()]]
 
                
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(30)
            spacing: dp(30)
            size_hint_y: None

            MDRaisedButton:
                text: 'Cancel'
                md_bg_color: gch("#3EAF76")
                on_release: root.back()
                
